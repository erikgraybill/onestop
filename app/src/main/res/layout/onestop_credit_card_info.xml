<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <View
            android:id="@+id/DecorativeDivider1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="60dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/DecorativeDivider2"
            android:layout_width="419dp"
            android:layout_height="11dp"
            android:layout_marginBottom="60dp"
            android:background="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OneStop"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/DecorativeDivider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/BACKbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="590dp" />

        <Button
            android:id="@+id/SUMBITBUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUMBIT"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="590dp" />

        <RadioButton
            android:id="@+id/Credit"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:text="Credit"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="246dp" />

        <RadioButton
            android:id="@+id/Debit"
            android:layout_width="86dp"
            android:layout_height="53dp"
            android:text="Debit"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="246dp" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Card Name"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="343dp" />

        <TextView
            android:id="@+id/PassType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Ride"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="166dp" />

        <TextView
            android:id="@+id/TOTAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$39.00"
            tools:layout_editor_absoluteX="227dp"
            tools:layout_editor_absoluteY="166dp" />

        <EditText
            android:id="@+id/CREDITNUMBER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="9-NUMBER"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="401dp" />

        <EditText
            android:id="@+id/cvc"
            android:layout_width="85dp"
            android:layout_height="53dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="CVC"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="393dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>